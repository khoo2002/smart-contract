{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/program-tracker",
      "dest": "/server.js"
    },
    {
      "src": "/payment",
      "dest": "/server.js"
    },
    {
      "src": "/submit",
      "dest": "/server.js"
    },
    {
      "src": "/submit-payment",
      "dest": "/server.js"
    },
    {
      "src": "/transaction/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/payment-transaction/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/entries/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/explorer/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/",
      "dest": "/server.js"
    }
  ],
  "env": {
    "ANKR_URL": "@ankr_url",
    "PRIVATE_KEY": "@private_key", 
    "PINATA_API_KEY": "@pinata_api_key",
    "PINATA_SECRET_KEY": "@pinata_secret_key"
  }
}
